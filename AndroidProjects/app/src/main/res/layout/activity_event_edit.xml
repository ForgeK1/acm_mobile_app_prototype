<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Navy"
    tools:context=".EventActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Name:"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/Turq"/>

    <EditText
        android:id="@+id/eventNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        android:ems="10"
        android:text=""
        android:inputType="text"
        android:backgroundTint="@color/Turq"
        android:textColor="@color/Turq"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Event Description:"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/Turq"/>

    <EditText
        android:id="@+id/eventDescriptionET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        android:maxLength="50"
        android:textSize="20sp"
        android:backgroundTint="@color/Turq"
        android:ems="10"
        android:text=""/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Time:"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/Turq"/>

    <EditText
        android:id="@+id/eventTimeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:inputType="text"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        android:textColor="@color/Turq"
        android:backgroundTint="@color/Turq"
        android:ems="10"
        android:text=""/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Date:"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/Turq"/>

    <EditText
        android:id="@+id/eventDateET"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:text=""
        android:textColor="@color/Turq"
        android:backgroundTint="@color/Turq"
        android:hint="E.g: Sun Dec 25 2023"
        android:inputType="text"
        android:textColorHint="@color/Turq"
        android:textSize="20sp" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@null"
        android:textStyle="bold"
        android:onClick="saveEventAction"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/Turq"/>


</LinearLayout>